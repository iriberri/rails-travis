<div class="container text-center">
  <h1>Wagon hunt</h1>
  <p>Find the best tech products</p>
  <% if user_signed_in? %>
    <p> <%= link_to "Voir mes produits", products_path, class:"btn btn-primary" %></p>
    <p>A lot of new products on <%= @today %></p>
    <div class="container padded">
      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <%= link_to 'Design', products_path(category: "design"), class:"card-category" %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= link_to 'Tech', products_path(category: "tech"), class:"card-category" %>
        </div>
        <div class="col-xs-12 col-sm-4">
          <%= link_to 'Education', products_path(category: "education"), class:"card-category" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
